.push
.wrap
  %h3.section_title=@user_beat.name
  %p.track_author
    =link_to "by #{@user_beat.user.username}", mc_path(@user_beat.user)

  .theawesomeness
    .speakerl
    %canvas#pulsel
    %canvas#rightway
    .speakerr
    %canvas#pulser
    %canvas#wrongway
    .wrongwaygradient

  .controls
    %button#start.button_purple{:onclick => "startPlaying(this);"} Play
    %button#stop.button_purple{:onclick => "stopPlaying(this); disabled"} Stop

  %a.track_share{:href => "https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fbamc.co/user_beats/#{@user_beat.id}", :target => "_blank"}
    Share on Facebook

  %a.track_share{"data-count" => "none", "data-url" => "http://bamc.co/user_beats/#{@user_beat.id}", :href => "https://twitter.com/share?text=Listen%20to%20my%20awesome%20track&url=http://bamc.co/user_beats/#{@user_beat.id}", :target => "_blank"}
    Share on Twitter
:javascript
  if (window.chrome) {
    playTrack("#{@user_beat.beat.url.split('?')[0]}");
  } else {
    alert("To see this page in it's fully glory please use Chrome");
    $('#fallback').css('display', 'inline');
  }
